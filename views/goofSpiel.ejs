<!DOCTYPE html>
<html>
  <% include partials/head %>
  <header>
    <% include partials/header %>
  </header>
  <main class="goofspiel">
    <body id="playArea">
      <!--function used to split the string src to retreive card id examples(0H, 2S)-->
      <% function cardID (fileName) {
      let fileArray = fileName.split(".");
      return fileArray[0];
    } %>
      <h1 class="text-center">Goofspiel!!</h1>
      <div class="opponent container mx-auto d-block">
        <% for(var i = 0; i < Deck.length; i++) { %>
        <img class="cardback" src="/images/cardback.png">
        <% } %>
      </div>
      <div class="playarea">
        <% include partials/goofspielInstructions %>
      </div>
      <div class="player container mx-auto d-block">
        <form method="post" action="/goofSpiel">
          <% for(var i = 0; i < Deck.length; i++) { %>
          <button class="myCard" name="card" id='<%= cardID(Deck[i]) %>' type="submit" value="<%= cardID(Deck[i]) %>"><img
              class="cardFront" src="/images/<%= Deck[i] %>"></button>
          <% } %>
        </form>
      </div>
      <% include partials/footer %>
    </body>
  </main>
</html>
