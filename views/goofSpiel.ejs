<% include partials/head %>
<main>
<body id="playArea">
  <% include partials/header %>
<!--function used to split the string src to retreive card id examples(0H, 2S)-->
  <% function cardID (fileName) {
    let fileArray = fileName.split(".");
    return fileArray[0];
  } %>
  <h1 class="container">Goofspiel Game page</h1>
  <form method="post" action="./goofSpiel">
    <% for(var i = 0; i < Deck.img.length; i++) { %>
    <button class="myCard" name="card" id='<%= cardID(Deck.img[i]) %>' type="submit" value="<%= cardID(Deck.img[i]) %>"><img src="/images/<%= Deck.img[i] %>"></button>
    <% } %>
  </form>
  <% include partials/footer %>
</body>
</main>
</html>

