<button id="btn" type="button" class="btn btn-info ml-auto" data-toggle="modal" data-target="#Login">Login</button>

<div id="Login" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div id="Login" class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Login</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <form method="post" action="/login" id="loginForm">
          <div class="form-group">
            <form role="form" method="post" id="reused_form">
              <div class="form-group">
                <label for="loginEmail">Email:</label>
                <input type="email" class="from-control" id="loginEmail" name="loginEmail" required maxlength="50">
              </div>
              <div class="form-group">
                <label for="loginPassword">Password:</label>
                <input type="password" class="from-control" id="loginPassword" name="loginPassword" required maxlength="50">
              </div>
              <button type="submit" class="btn btn-lg btn-success btn-block" id="loginBtnContactUs">Post It!</button>
            </form>
          </div>
      </div>
    </div>
  </div>
</div>